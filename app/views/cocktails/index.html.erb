
<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <h1>Cocktails (<%= @cocktails.count %>)</h1>
      <%= link_to "New cocktail", new_cocktail_path, class: "btn btn-primary" %>
      <hr>
      <div>
        <% @cocktails.each do |c| %>
        <div>
          <%= link_to c.name.capitalize, cocktail_path(c) %>
        </div>
        <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>

