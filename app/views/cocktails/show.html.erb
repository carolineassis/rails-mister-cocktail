<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
    <h2><%= @cocktail.name %></h2>
      <hr>
      <% @cocktail.doses.each do |d| %>
      <div>
        <%= d.ingredient.name %> - <%= d.description %>
        <%= link_to "Delete", dose_path(d), method: :delete  %>
      </div>
      <% end %>
      <hr>
      <%= link_to "New dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>
      <%= link_to "Back", cocktails_path, class: "btn btn-primary"  %>
    </div>
  </div>
</div>

